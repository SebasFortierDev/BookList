<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/google_book_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <ImageView
        android:id="@+id/google_book_image"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:contentDescription="@string/book_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:src="@drawable/ic_launcher_background" />

    <TextView
        android:id="@+id/google_book_title"
        android:layout_width="250dp"

        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/google_book_image"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Cartographie des nuages" />

    <TextView
        android:id="@+id/google_book_author"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textStyle="bold"
        android:textSize="15sp"
        app:layout_constraintStart_toEndOf="@id/google_book_image"
        app:layout_constraintTop_toBottomOf="@id/google_book_title"
        tools:text="David Mitchell" />

    <TextView
        android:id="@+id/google_book_description"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:paddingStart="10dp"
        android:paddingEnd="0dp"
        android:textSize="11sp"
        app:layout_constraintStart_toEndOf="@id/google_book_image"
        app:layout_constraintTop_toBottomOf="@id/google_book_author"
        tools:text="Cartographie des nuages is an amazing book!" />

</androidx.constraintlayout.widget.ConstraintLayout>

